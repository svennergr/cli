{
  "command": "npm run config link",
  "steps": [
   {
      "type": "output",
      "properties": {
        "content": "To run this command, log in to Shopify Partners."
      }
    },
    {
      "type": "output",
      "properties": {
        "content": "ðŸ‘‰ Press any key to open the login page on your browser"
      }
    },
    {
      "type": "output",
      "properties": {
        "content": "âœ… Logged in.\n"
      }
    },
    {
      "type": "confirmationPrompt",
      "properties": {
        "message": "Would you like to link to an existing app on Shopify?",
        "confirmationMessage": "Yes, link to an existing app",
        "cancellationMessage": "No, create a new app"
      }
    },
    {
      "type": "selectPrompt",
      "properties": {
        "message": "Which app would you like to link to?",
        "choices": [
          {
            "label": "Printful",
            "value": "printful"
          },
          {
            "label": "Printful Dev",
            "value": "development"
          },
          {
            "label": "Printful Staging",
            "value": "staging"
          },
          {
            "label": "Printful (Alice)",
            "value": "alice"
          }
        ]
      }
    },
    {
      "type": "textPrompt",
      "properties": {
        "message": "What would you like to name your configuration file?",
        "defaultValue": "shopify.app.printful.toml"
      }
    },
    {
      "type": "success",
      "properties": {
        "headline": "`Printful` connected to this codebase.",
        "body": [
          "Using shopify.app.production.toml as the current configuration."
        ],
        "nextSteps": [
          [
            "To see your app, run",
            {
              "command": "shopify app dev"
            }
          ],
          [
            "To push configuration changes, run",
            {
              "command": "shopify app config push"
            }
          ],
          [
            "To switch configurations, run",
            {
              "command": "shopify app config use {config_name}"
            }
          ]
        ]
      }
    }
  ]
}
