{
  "steps": [
    {
      "type": "output",
      "properties": {
        "content": "$ shopify app config link\n",
        "color": "cyan"
      }
    },
   {
      "type": "output",
      "properties": {
        "content": "To run this command, log in to Shopify Partners."
      }
    },
    {
      "type": "output",
      "properties": {
        "content": "ðŸ‘‰ Press any key to open the login page on your browser"
      }
    },
    {
      "type": "output",
      "properties": {
        "content": "âœ… Logged in.\n"
      }
    },
    {
      "type": "confirmationPrompt",
      "properties": {
        "message": "Would you like to link an existing app on Shopify to a config?",
        "confirmationMessage": "Yes, link to an existing app",
        "cancellationMessage": "No, create a new app"
      }
    },
    {
      "type": "selectPrompt",
      "properties": {
        "message": "Which Partners organization is this work for?",
        "choices": [
          {
            "label": "Ellen's org",
            "value": "Ellen's org"
          },
          {
            "label": "test partners org",
            "value": "test partners org"
          }
        ]
      }
    },
    {
      "type": "selectPrompt",
      "properties": {
        "message": "Which app would you like to link this config to?",
        "choices": [
          {
            "label": "Dropshipping App",
            "value": "dropshipping"
          },
          {
            "label": "Dropshipping (development)",
            "value": "development"
          },
          {
            "label": "Dropshipping (Alice)",
            "value": "alice"
          },
          {
            "label": "Dropshipping (Bob)",
            "value": "bob"
          }
        ]
      }
    },
    {
      "type": "textPrompt",
      "properties": {
        "message": "What would you like to name your configuration file?",
        "defaultValue": "shopify.app.development.toml"
      }
    },
    {
      "type": "warning",
      "properties": {
        "headline": "shopify.app.development.toml already exists.",
        "body": []
      }
    },
    {
      "type": "confirmationPrompt",
      "properties": {
        "message": "Would you like to choose another configuration file name?",
        "confirmationMessage": "Yes, choose a new configuration file name",
        "cancellationMessage": "No, overwrite and link Dropshipping (Alice) to shopify.app.development.toml"
      }
    },
    {
      "type": "success",
      "properties": {
        "headline": "`Dropshipping (Alice)` connected to this codebase.",
        "body": [
          "shopify.app.development.toml is now the active configuration."
        ],
        "nextSteps": [
          [
            "For extensions, run",
            {
              "command": "generate extension"
            }
          ],
          [
            "To see your app, run",
            {
              "command": "shopify app dev"
            }
          ]
        ]
      }
    }
  ]
}
